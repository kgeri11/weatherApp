{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "es5", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots" : ["node_modules/@types"],
    "strict": true
  },
  "include": [
    "src/**/*",
    "custom.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.tsx"
  ],
  "plugins": [{ "name": "typed-scss-modules" }]
}
